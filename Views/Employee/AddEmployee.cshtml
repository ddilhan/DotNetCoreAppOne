
@{
    ViewData["Title"] = "AddEmployee";
}

@model Employee



<div class="container">
    @using (Html.BeginForm("AddEmployee", "Employee", FormMethod.Post, new { id = "addEmployeeForm" }))
    {
        <div class="row">
            <div class="col-md-6">
                <h3>Name</h3>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>Location</h3>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Location)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>Age</h3>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Age)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-info" id="btnInsert">Insert</button>
            </div>
        </div>
    }
</div>

