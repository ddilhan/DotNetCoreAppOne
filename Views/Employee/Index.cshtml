@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th> Id </th>
                        <th> Name </th>
                        <th> Loaction </th>
                        <th> Age </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                    <tr>
                        <td id="empId">@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Location</td>
                        <td>@item.Age</td>
                        <td>@Html.ActionLink("Edit", "EditEmployee", "Employee", new { id = @item.Id }) | @Html.ActionLink("Delete", "DeleteEmployee", "Employee", new { id = @item.Id })</td>
                    </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Create new Employee", "AddEmployee", "Employee")
        </div>
    </div>

</div>
